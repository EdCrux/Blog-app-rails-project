<div class="white box">
<h2>Your articles</h2>
<ul>
  <% @articles.each do |article| %>
    <li class="smallBox">
      <span> <%= link_to "x" , article_path(article) , method: :delete, data: {confirm: "Do you want to delete this article" } %> 
      <h3><%= link_to article.title, article_path(article), class:'article-index' %></h3>
    </li>
  <% end %>
</ul>

</div>
